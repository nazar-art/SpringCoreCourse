<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="consoleEventLogger" class="ua.epam.spring.core.logger.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="ua.epam.spring.core.logger.FileEventLogger" init-method="init">
        <constructor-arg value="log.txt"/>
    </bean>

    <bean id="cachedFileEventLogger" class="ua.epam.spring.core.logger.CacheFileEventLogger"
          destroy-method="destroy"
          parent="fileEventLogger">
        <constructor-arg value="10"/>
    </bean>


    <bean id="combinedEventLogger" class="ua.epam.spring.core.logger.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger"/>
                <ref bean="cachedFileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>
</beans>
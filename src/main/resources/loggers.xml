<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


    <bean id="event" class="com.epam.spring.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

    <bean id="eventLogger" class="com.epam.spring.ConsoleEventLogger"/>

    <!--<bean id="fileLogger" class="com.epam.spring.FileEventLogger" init-method="init">
        &lt;!&ndash;<property name="fileName" value="bean_file.txt"/>&ndash;&gt;
        <constructor-arg value="log.txt"/>
    </bean>

    <bean id="cacheLogger" class="com.epam.spring.CacheFileEventLogger" destroy-method="destroy"
          parent="fileLogger">
        &lt;!&ndash;<constructor-arg value="cacheFile.txt"/>&ndash;&gt;
        <constructor-arg value="10"/>
    </bean>-->
</beans>